{
  "name": "random-image-api",
  "version": "1.0.0",
  "description": "兰空图床随机图片API管理系统",
  "main": "server-secure.js",
  "scripts": {
    "start": "node server-secure.js",
    "dev": "nodemon server-secure.js",
    "build": "cd vue-simple && npm run build && cd ..",
    "setup": "npm install && cd vue-simple && npm install && cd ..",
    "setup:build": "npm run setup && npm run build",
    "production": "NODE_ENV=production node server-secure.js",
    "production:win": "set NODE_ENV=production && node server-secure.js",
    "docker:build": "docker build -t random-image-api .",
    "docker:run": "docker run -d -p 3000:3000 --name random-image-api random-image-api",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
