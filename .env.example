# 服务器配置
PORT=3000                                      # 后端服务端口，默认3000

# 安全配置（必须修改！）
ENCRYPT_SECRET=your-unique-encrypt-secret-key-change-this-123456789  # 数据加密密钥（至少32位）
SESSION_SECRET=your-unique-session-secret-key-change-this-987654321  # Session密钥（至少32位）

# CORS配置（根据实际部署域名修改）
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://your-domain.com  # 允许的跨域来源，多个用逗号分隔

# 请求限流配置（可选）
RATE_LIMIT_WINDOW_MS=900000    # 限流时间窗口（毫秒），默认15分钟
RATE_LIMIT_MAX=100              # 时间窗口内最大请求数，默认100次

# 前端开发配置（仅开发环境）
VITE_API_PORT=3000              # 前端开发时连接的后端端口